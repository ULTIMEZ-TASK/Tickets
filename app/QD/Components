    <script>
        // Tab Switching Logic
        function switchTab(tabName) {
            // Hide all tab contents
            ['preview', 'usage', 'log', 'conditions'].forEach(t => {
                document.getElementById(`tab-${t}`).classList.add('hidden');
                
                // Reset button styles
                const btn = document.getElementById(`tab-btn-${t}`);
                btn.classList.remove('border-primary', 'text-primary');
                btn.classList.add('border-transparent', 'text-gray-500');
            });

            // Show selected content
            document.getElementById(`tab-${tabName}`).classList.remove('hidden');
            
            // Set active button styles
            const activeBtn = document.getElementById(`tab-btn-${tabName}`);
            activeBtn.classList.remove('border-transparent', 'text-gray-500');
            activeBtn.classList.add('border-primary', 'text-primary');
        }

        function openPreview(name, id, status, themeColor, usageCount, lastEdited) {
            const modal = document.getElementById('preview-modal');
            const backdrop = document.getElementById('modal-backdrop');
            const panel = document.getElementById('modal-panel');
            
            // Reset to first tab
            switchTab('preview');

            // Populate Data
            document.getElementById('preview-title').textContent = name;
            document.getElementById('preview-id').textContent = id;
            
            // Update Header Metrics
            document.getElementById('preview-usage-header').textContent = usageCount + ' Pages';
            document.getElementById('preview-date-header').textContent = lastEdited.split('(')[1].replace(')', ''); // Shows relative time only for cleaner header
            
            const statusBadge = document.getElementById('preview-status');
            statusBadge.textContent = status;
            
            // Generate Mock Preview Content
            const canvas = document.getElementById('preview-canvas');
            const code = document.getElementById('preview-code');
            
            // Simple visual switching based on component name
            if(name.includes('Button')) {
                canvas.innerHTML = `<button class="px-5 py-2.5 bg-blue-600 text-white rounded font-bold shadow-md hover:bg-blue-700 transition-all flex items-center gap-2 text-xs"><i class="ph-bold ph-hand-pointing"></i> ${name}</button>`;
                code.textContent = `<Button variant="primary" icon="hand-pointing">${name}</Button>`;
            } else if (name.includes('Table')) {
                canvas.innerHTML = `
                    <div class="w-full max-w-sm border border-gray-200 rounded-md bg-white text-[10px] overflow-hidden shadow-sm">
                        <div class="bg-gray-50 p-2 border-b border-gray-200 font-bold flex justify-between"><span>Name</span><span>Role</span></div>
                        <div class="p-2 border-b border-gray-100 flex justify-between"><span>Alice</span><span class="text-gray-500">Admin</span></div>
                        <div class="p-2 flex justify-between"><span>Bob</span><span class="text-gray-500">Editor</span></div>
                    </div>`;
                code.textContent = `<DataTable data={users} columns={['Name', 'Role']} />`;
            } else if (name.includes('Modal')) {
                canvas.innerHTML = `
                    <div class="bg-white p-4 rounded-lg shadow-lg border border-gray-200 w-48 text-center">
                        <h4 class="font-bold mb-2 text-xs">Confirm Action?</h4>
                        <div class="flex gap-2 justify-center"><button class="px-2 py-1 bg-gray-100 rounded text-[10px]">Cancel</button><button class="px-2 py-1 bg-red-600 text-white rounded text-[10px]">Delete</button></div>
                    </div>`;
                code.textContent = `<Modal title="Confirm Action" onConfirm={handleDelete} />`;
            } else if (name.includes('Toggle')) {
                canvas.innerHTML = `
                    <div class="relative inline-block w-10 mr-2 align-middle select-none transition duration-200 ease-in">
                        <input type="checkbox" name="toggle" id="toggle" class="toggle-checkbox absolute block w-5 h-5 rounded-full bg-white border-4 appearance-none cursor-pointer border-gray-300"/>
                        <label for="toggle" class="toggle-label block overflow-hidden h-5 rounded-full bg-gray-300 cursor-pointer"></label>
                    </div>`;
                code.textContent = `<Switch checked={isEnabled} onChange={toggle} />`;
            } else {
                 canvas.innerHTML = `<div class="text-gray-400 font-mono text-xs border border-dashed border-gray-300 p-4 rounded bg-white">No visual preview available for ${name}</div>`;
                 code.textContent = `<${name.replace(/\s/g, '')} />`;
            }

            // Show Modal
            modal.classList.remove('hidden');
            // Slight delay for animation classes
            setTimeout(() => {
                backdrop.classList.remove('opacity-0');
                panel.classList.remove('scale-95', 'opacity-0');
                panel.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closePreview() {
            const modal = document.getElementById('preview-modal');
            const backdrop = document.getElementById('modal-backdrop');
            const panel = document.getElementById('modal-panel');

            // Animation out
            backdrop.classList.add('opacity-0');
            panel.classList.remove('scale-100', 'opacity-100');
            panel.classList.add('scale-95', 'opacity-0');

            setTimeout(() => {
                modal.classList.add('hidden');
            }, 200);
        }

        // New Component Modal Logic
        function openNewComponentModal() {
            const modal = document.getElementById('new-component-modal');
            const backdrop = document.getElementById('new-modal-backdrop');
            const panel = document.getElementById('new-modal-panel');

            modal.classList.remove('hidden');
            setTimeout(() => {
                backdrop.classList.remove('opacity-0');
                panel.classList.remove('scale-95', 'opacity-0');
                panel.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closeNewComponentModal() {
            const modal = document.getElementById('new-component-modal');
            const backdrop = document.getElementById('new-modal-backdrop');
            const panel = document.getElementById('new-modal-panel');

            backdrop.classList.add('opacity-0');
            panel.classList.remove('scale-100', 'opacity-100');
            panel.classList.add('scale-95', 'opacity-0');

            setTimeout(() => {
                modal.classList.add('hidden');
            }, 200);
        }
    </script>
</body>
</html>
