    <!-- ADD NEW COMPONENT MODAL -->
    <div id="new-component-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <!-- Backdrop -->
        <div class="absolute inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity opacity-0" id="new-modal-backdrop" onclick="closeNewComponentModal()"></div>
        
        <!-- Modal Panel -->
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg shadow-2xl w-full max-w-md transform transition-all scale-95 opacity-0 relative overflow-hidden flex flex-col" id="new-modal-panel">
                
                <div class="px-5 py-4 border-b border-gray-100 bg-gray-50/50 flex justify-between items-center">
                    <h3 class="text-sm font-bold text-gray-900">Create New Component</h3>
                    <button onclick="closeNewComponentModal()" class="text-gray-400 hover:text-gray-600"><i class="ph-bold ph-x text-base"></i></button>
                </div>

                <div class="p-5 space-y-4">
                    <div>
                        <label class="block text-[11px] font-bold text-gray-700 mb-1.5 uppercase">Component Name</label>
                        <div class="cp-input-wrapper">
                            <input type="text" class="cp-input" placeholder="e.g. User Card">
                        </div>
